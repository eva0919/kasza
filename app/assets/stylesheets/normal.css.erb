body {
	height:100%;
	background-image: url('<%= asset_path("bg3.png")%>');
	overflow-x: hidden;
}

.leftpage {
	position:fixed;
	background-color:white;
	width:200px; 
	height:1000px;
	top: 0;
	left: 0;
	border-right:1px solid;
	border-color: #C4B9BE;
	z-index: 3;	
}
.leftcontent {
	position: relative;
	width:200px; 
	height:550px;
	top: 0;
	bottom: 0;
}
#mainlogo {
	text-align: center;
	border-bottom: 1px dashed;
	border-color: #C4B9BE
}
#logo2 {
	position: relative;
	margin:0 auto;
}
#mainul {
	position:absolute;
	left:0;
	width:200px;
	text-align: center;
}
#mainul {
	margin-top:100px;
}
#mainul .UL:last-child {
	
	border-bottom:1px solid;
	border-color: #C4B9BE;
}
#mainul .UL {
	height:50px;
	border-top:1px solid;
	border-color: #C4B9BE;
}
#mainul .UL p{
	color :#CC5C54;
}

#mainul .UL:hover {
	background-color:#FFFFCD;
	cursor:pointer;
}
#mainul .UL p:hover {
	color :#CC5C54;
}

#mainul .ulclicked {
	background-color:#FFFFCD;
	color :#EFFDF5;
}
#mainul .ulclicked p{
	color :#CC5C54;
}


.arrow {
	position: relative;
	margin-left: 195px;
	margin-top: -32px;
	background-color:#FFFFCD;
	height: 10px;
	width:10px;

	border-top:1px solid;
	border-right:1px solid;
	border-color: #C4B9BE;

	z-index: 3;

	transform:rotate(45deg);
	-ms-transform:rotate(45deg); /* IE 9 */
	-moz-transform:rotate(45deg); /* Firefox */
	-webkit-transform:rotate(45deg); /* Safari and Chrome */
	-o-transform:rotate(45deg); /* Opera */


}

#middlepage {
	background-color: white;
	width:80%;
	height: 800px;
	position: relative;
	margin-left: 200px;
	margin-right:450px;
	border:1px solid;
	border-color: #C4B9BE;
}

.item {
  width: 300px;
  margin: 10px;
  float: left;
  border:1px solid;
  border-radius:4px;
  -moz-border-radius:4px; /* Firefox 3.6 and earlier */
  -moz-box-shadow: 5px 5px 10px #000000;
  -webkit-box-shadow: 5px 5px 10px #000000;
  box-shadow: 5px 5px 10px #000000;

}
.item:hover {
	cursor: pointer;
	background-color: #FFFFCD;
	display: block;
}

.itemtitle {
	color:#CC5C54;
	margin: 10px;
}

.photoset {
	margin-left:10px;
}

.itemcontent {
	width: 280px;
	margin-left:10px;
	background-color: #7AB5DB;
	border-radius:7px;
	opacity: 0.7;
	text-align: center;;
}

.itemcontent p {
	opacity: 1.5;
}

.fb_login {
	position: absolute;
	text-align: center;
	background-color: #7AB5DB;
	height: 40px;
	width: 205px;
	bottom:0;
	line-height: 0;
	margin-bottom: 50px;
	cursor: pointer;
	border-right:1px solid;
	border-color: #C4B9BE;
	z-index: 5;

}

.fb_login p {
	color: white;
	height: 20px;
	padding-bottom: 50px;
	font-size: 20px
}

.fb_logout {
	position: absolute;
	text-align: center;
	background-color: #77C4D3;
	bottom:0;
	color:#DAEDE2;
	height: 40px;
	line-height: 0;
	width:70px;
	margin-left:200px;
	z-index: 5;
	margin-bottom: 50px;
	cursor: pointer;
}
.fb_logout :hover {
	color: #CC5C54;
}
.fb_logout p {
	margin-top: 10px;
}

.fb_logout p span {
	position: relative;
	bottom: 5px;
}

.blackmosk {
	position: fixed;
	top:0;
	left:0;
	width: 100%;
	height: 100%;
	background-color: black;
	z-index: 10;
	opacity: 0.9;
}

.displayphoto {
	position: absolute;
	
	top:30px;
	margin-left: 20%;
	background-color: white;
	z-index: 100;
	padding-top: 20px;
	padding-left: 20px;
	padding-bottom: 20px;
	border-radius:4px;


}
.arrowleft {
	position: absolute;
	top:150px;
	left:-80px;
	opacity: 0.2;
}
.arrowleft:hover {
	opacity: 0.8;
	cursor: pointer;
}
.arrowright {
	position: absolute;
	top:150px;
	left: 520px;
	margin-left: 20%;
	opacity: 0.2;
}
.arrowright:hover {
	opacity: 0.8;
	cursor: pointer;
}
.dpage {
	height: 450px;
	overflow-x:hidden; 
	overflow-y:auto;
	padding-right: 40px; 
}
