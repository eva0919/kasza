<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Kind</th>
    <th>Content</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= image_tag picture.image.url(:thumb) %></td>
    <td><%= picture.kind %></td>
    <td><%= picture.content %></td>
    <td><%= picture.latitude %></td>
    <td><%= picture.longitude %></td>
    <td><%= picture.tag %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Picture', new_picture_path %>
